 <h2>Upcomming Sessions</h2>
   <br>


 <%= form_tag("/appointments", method: 'get') do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>
   <br>

 <%= render partial: "appointments", locals: {appointments: @appointments} %>

<% if @client%>
   
   <%=link_to "New Session with #{@client.name}", new_client_appointment_path(@client.name)%>

<%elsif @location%>
   
   <%=link_to "New Session at #{@location.nickname}", new_location_appointment_path(@location)%>

<%end%>

